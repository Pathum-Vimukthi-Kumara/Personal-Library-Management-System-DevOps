# Environment configuration for Personal Library Management System

COMPOSE_PROJECT_NAME=library-management

MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=librarydb
MYSQL_USER=libraryuser
MYSQL_PASSWORD=librarypass
MYSQL_PORT=3306


SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/librarydb
SPRING_DATASOURCE_USERNAME=libraryuser
SPRING_DATASOURCE_PASSWORD=librarypass
SPRING_APPLICATION_NAME=DevOps_Project
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SERVER_PORT=4000

JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000

# File Upload
FILE_UPLOAD_DIR=uploads/images
MAX_FILE_SIZE=10MB


REACT_APP_API_URL=http://localhost:4000
REACT_APP_ENV=development

CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000


FRONTEND_PORT=3000
BACKEND_URL=http://backend:4000

LOG_LEVEL=INFO
