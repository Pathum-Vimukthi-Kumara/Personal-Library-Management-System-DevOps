# Backend service environment variables
# Note: Spring Boot automatically maps these env vars to application properties.

# Database
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/librarydb
SPRING_DATASOURCE_USERNAME=libraryuser
SPRING_DATASOURCE_PASSWORD=librarypass

# Server
SERVER_PORT=4000

# File uploads
FILE_UPLOAD_DIR=/app/uploads

# JPA / Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# CORS
SPRING_WEB_CORS_ALLOWED_ORIGINS=*
SPRING_WEB_CORS_ALLOWED_METHODS=*
SPRING_WEB_CORS_ALLOWED_HEADERS=*

# JWT
# Must be at least 256 bits (32+ bytes) for HS256
JWT_SECRET=mySecretKey1234567890123456789012345678901234567890SecureKey256Bits
JWT_EXPIRATION=86400000
